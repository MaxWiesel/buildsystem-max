define PYTHON_SETUPTOOLS_CHECK_SETUP_PY
	$(Q)$(CD) $(PKG_BUILD_DIR); \
		if [ ! -e setup.py ]; then \
			$(call MESSAGE,"Applying 0001-add-setup.py.patch"); \
			patch -p1 -i $(PACKAGE_DIR)/target/python-site-packages/patches/0001-add-setup.py.patch; \
		fi
endef
